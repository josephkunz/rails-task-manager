<h1>All tasks:</h1>

 <% @tasks.each do |task| %>
    <!-- link_to TEXT, PATH -->
    <li>
      <% if task.completed %>yes <% else %> X <% end %>
      <%=  link_to task.title, task_path(task.id) %>
      <%= link_to "Delete", task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
     </li>


  <% end %>


<br>

